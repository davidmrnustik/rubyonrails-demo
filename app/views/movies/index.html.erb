<h1>Listing movies</h1>

<%#= link_to "Prev", movies_path(page: @prev_page) %>
<%#= link_to "Next", movies_path(page: @next_page) %>
<%= paginate @movies %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Director</th>
      <th>Description</th>
      <th>Thumbnail</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= link_to movie.proper_name, movie %></td>
        <td><%= movie.director %></td>
        <td><%= truncate(movie.description.html_safe, length: 20) %></td>
        <td><%= link_to(image_tag(movie.thumbnail), movie) %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
