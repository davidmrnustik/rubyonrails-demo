<p id="notice"><%= notice %></p>
<% if @movie.comments.count != 0 && @movie.comments(:rating) != nil %>
<p>Average Rating: <%= stars((@movie.comments.average(:rating)).round) %></p>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @movie.proper_name %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description.html_safe %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Length:</strong>
  <%= @movie.length %>
</p>

<p>
  <strong>Format:</strong>
  <%= @movie.format %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@movie.image) %>
</p>

<p>
  <strong>Thumbnail Image:</strong>
  <%= image_tag(@movie.image) %>
</p>

<%= render 'shared/comment_form' %>

<h3>Comments</h3>
<% @movie.comments.descending.each do |comment| %>
	<p><%= time_ago_in_words(comment.created_at) %> ago, <strong><%= comment.author %></strong> said:</p>
	<p><%= comment.content.html_safe %></p>
	<p>Rating: <% if comment.rating != nil %><%= stars(comment.rating) %><% else %>
	  No rating<% end %></p>
	<% if is_admin? %>
		<%= link_to "Delete Comment", movie_comment_path(@movie, comment), data: { confirm: 'Are you sure?' }, method: :delete %>
	<% end %>
	<hr/>
<% end %>

<%= link_to "Email this movie", mail_movie_path(@movie) %> |

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
